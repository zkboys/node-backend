{
    "name": "node-backend",
    "version": "1.6.0",
    "description": "基于node koa 后端服务",
    "main": "app.js",
    "scripts": {
        "start": "cross-env nodemon --ignore views/ --ignore admin-front/ --ignore public/ src/app",
        "pro": "cross-env NODE_ENV=production node src/app",
        "test": "node src/test/gen && cross-env NODE_ENV=test jest --runInBand --forceExit",
        "test:watch": "yarn test -- --watch",
        "test:cover": "yarn test -- --coverage",
        "lint": "eslint --ignore-path .gitignore . --quiet --ext .vue,.js",
        "dev:client": "node src/app",
        "dev:server": "cross-env NODE_ENV=production yarn  dev",
        "build": "cross-env NODE_ENV=production yarn  build:dev",
        "build:dev": "rimraf dist && yarn  build:client && yarn  build:server",
        "build:client": "webpack --config build/webpack.client.config.js --progress --hide-modules",
        "build:server": "webpack --config build/webpack.server.config.js --progress --hide-modules"
    },
    "author": "zkboys",
    "license": "GPL-3.0",
    "keywords": [
        "node-backend"
    ],
    "dependencies": {
        "@koa/cors": "^3.0.0",
        "axios": "^0.19.0",
        "babel-eslint": "^10.1.0",
        "bcryptjs": "^2.4.3",
        "brace": "^0.11.0",
        "config": "^3.2.4",
        "connection-string": "^3.1.1",
        "cron": "^1.8.2",
        "cross-env": "^6.0.3",
        "debug": "^4.1.1",
        "ejs": "^3.0.1",
        "ioredis": "^4.14.1",
        "ip-filter": "^2.0.0",
        "jszip": "^3.1.5",
        "koa": "^2.11.0",
        "koa-body": "^4.1.1",
        "koa-favicon": "^2.0.0",
        "koa-jwt": "^3.3.0",
        "koa-onerror": "^4.0.0",
        "koa-pino-logger": "^2.1.1",
        "koa-ratelimit": "^4.0.0",
        "koa-router": "^7.3.0",
        "koa-static-cache": "^5.1.1",
        "koa-validate": "^1.0.7",
        "lodash": "^4.17.4",
        "lru-cache": "^5.1.1",
        "mkdirp": "^0.5.1",
        "moment": "^2.20.1",
        "mysql2": "^2.1.0",
        "mz": "^2.7.0",
        "path-to-regexp": "^6.1.0",
        "pino-multi-stream": "^4.2.0",
        "restc": "^0.4.0",
        "rimraf": "^3.0.0",
        "sequelize": "^5.21.5",
        "uuid": "^3.1.0",
        "vm2": "^3.5.2"
    },
    "devDependencies": {
        "eslint": "^6.8.0",
        "eslint-config-standard": "^14.1.0",
        "eslint-plugin-html": "^6.0.0",
        "eslint-plugin-import": "^2.8.0",
        "eslint-plugin-node": "^11.0.0",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-standard": "^4.0.1",
        "jest": "^24.9.0",
        "nodemon": "^2.0.2",
        "supertest": "^4.0.2"
    },
    "optionalDependencies": {
        "fsevents": "*"
    }
}
