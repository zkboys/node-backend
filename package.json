{
    "name": "node-backend",
    "version": "1.6.0",
    "description": "基于node koa 后端服务",
    "main": "app.js",
    "author": "zkboys",
    "license": "GPL-3.0",
    "keywords": [
        "node-backend"
    ],
    "scripts": {
        "start:all": "concurrently \"yarn start\" \"cd admin-front && yarn start\"",
        "start": "cross-env NODE_ENV=development nodemon --exec babel-node src/app",
        "pro": "cross-env NODE_ENV=production node build/app",
        "pro:test": "cross-env NODE_CONFIG_ENV=test_production yarn pro",
        "deploy": "pm2 start process.json",
        "deploy:test": "pm2 start process_test.json",
        "build": "rimraf build && cross-env NODE_ENV=production ./node_modules/.bin/babel src --ignore src/public --out-dir build --copy-files",
        "build:front": "cd admin-front && yarn build",
        "build:all": "yarn build && yarn build:front",
        "test": "cross-env NODE_ENV=test jest --runInBand --forceExit",
        "test:watch": "yarn test --watch",
        "test:cover": "yarn test --coverage",
        "lint": "eslint --ignore-path .eslintignore . --quiet --ext .js"
    },
    "nodemonConfig": {
        "ignore": [
            "admin-front/",
            "src/public/",
            "src/views/",
            "src/script/errors.json"
        ]
    },
    "dependencies": {
        "@babel/cli": "^7.8.4",
        "@babel/core": "^7.9.0",
        "@babel/node": "^7.8.7",
        "@koa/cors": "^3.0.0",
        "async-validator": "^3.3.0",
        "axios": "^0.19.0",
        "bcryptjs": "^2.4.3",
        "brace": "^0.11.0",
        "commander": "^5.1.0",
        "config": "^3.2.4",
        "connection-string": "^3.1.1",
        "cron": "^1.8.2",
        "cross-env": "^6.0.3",
        "debug": "^4.1.1",
        "ejs": "^3.0.1",
        "fs": "^0.0.1-security",
        "glob": "^7.1.6",
        "inflection": "^1.12.0",
        "ioredis": "^4.14.1",
        "ip-filter": "^2.0.0",
        "jsonwebtoken": "^8.5.1",
        "jszip": "^3.1.5",
        "koa": "^2.11.0",
        "koa-body": "^4.1.1",
        "koa-favicon": "^2.0.0",
        "koa-jwt": "^3.3.0",
        "koa-onerror": "^4.0.0",
        "koa-pino-logger": "^2.1.1",
        "koa-ratelimit": "^4.0.0",
        "koa-router": "^7.3.0",
        "koa-static-cache": "^5.1.1",
        "koa-validate": "^1.0.7",
        "lodash": "^4.17.19",
        "lru-cache": "^5.1.1",
        "md5": "^2.2.1",
        "mkdirp": "^0.5.1",
        "moment": "^2.20.1",
        "mysql2": "^2.1.0",
        "mz": "^2.7.0",
        "node-xlsx": "^0.15.0",
        "path-to-regexp": "^6.1.0",
        "pino-multi-stream": "^4.2.0",
        "restc": "^0.4.0",
        "rimraf": "^3.0.0",
        "sequelize": "^5.21.5",
        "svg-captcha": "^1.4.0",
        "uuid": "^3.1.0",
        "vm2": "^3.9.4",
        "xls-to-json": "^0.5.4"
    },
    "devDependencies": {
        "@babel/plugin-proposal-class-properties": "^7.8.3",
        "@babel/plugin-proposal-decorators": "^7.8.3",
        "@babel/plugin-proposal-export-default-from": "^7.8.3",
        "@babel/plugin-proposal-function-bind": "^7.8.3",
        "@babel/plugin-transform-runtime": "^7.8.3",
        "@babel/preset-env": "^7.8.6",
        "@babel/runtime": "^7.8.4",
        "babel-eslint": "^10.1.0",
        "concurrently": "^5.2.0",
        "eslint": "^6.8.0",
        "eslint-config-standard": "^14.1.0",
        "eslint-plugin-flowtype": "^4.7.0",
        "eslint-plugin-html": "^6.0.0",
        "eslint-plugin-import": "^2.8.0",
        "eslint-plugin-jsx-a11y": "6.2.3",
        "eslint-plugin-node": "^11.0.0",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-react": "7.19.0",
        "eslint-plugin-react-hooks": "^1.6.1",
        "eslint-plugin-standard": "^4.0.1",
        "jest": "^24.9.0",
        "nodemon": "^2.0.2",
        "supertest": "^4.0.2"
    }
}
