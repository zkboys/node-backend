<head>
    <title>新用户注册</title>
    <style>
        .register-root {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .register-item {
            margin-bottom: 10px;
        }

        .register-item label {
            display: inline-block;
            width: 100px;
            text-align: right;
        }

        .error {
            color: red;
        }

    </style>
</head>

<div class="register-root">
    <div>
        <h2 style="text-align: center">注册 登录</h2>
        <div class="register-item">
            <label for="name">用户名：</label>
            <input class="form-input" id="name" type="text" name="name" value="admin2" placeholder="请输入用户名">
        </div>
        <div class="register-item">
            <label for="password">密码：</label>
            <input class="form-input" id="password" type="password" name="password" value="123" placeholder="请输入密码">
        </div>
        <div class="register-item">
            <label for="register"></label>
            <button id="register" class="form-button">注册</button>
            <button id="login" class="form-button">登录</button>
            <button id="logout" class="form-button">退出登录</button>
            <button id="users" class="form-button">请求所有用户</button>
        </div>
        <div class="error"></div>
    </div>
</div>
<div>
    <h1>首页</h1>
    <h2>ajax 上传文件</h2>

    <form class="form-horizontal" id="vform" action="">
        <div class="form-group">
            <label class="col-sm-3 control-label">请选择本地资源：</label>
            <div class="col-sm-8">
                <input name="file" type="file" class="form-control" id="file"/>
                <div class="progress">
                    <div class="progress-bar" id="progress-bar"></div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-4 col-sm-offset-3">
                <input class="btn btn-primary" id="submit" value="确认上传"/>
            </div>
        </div>
    </form>
    <div id="progress-bar" class="log"></div>
</div>

<script src="/public/main.js"></script>
<script>

    let token = '';
    $('#register').on('click', function () {

        const name = $('#name').val();
        const password = $('#password').val();
        const data = {
            name,
            password,
        };

        $.ajax({
            type: 'POST',
            url: '/api/register',
            data,
            success: function (res) {
                console.log(res);
            },
            error: function (err) {

                $('.error').html(JSON.stringify(err.responseJSON.data || err.responseJSON.message, null, 4));
            },
        });
    });

    $('#login').on('click', function () {
        const name = $('#name').val();
        const password = $('#password').val();
        const data = {
            name,
            password,
        };

        $.ajax({
            type: 'POST',
            url: '/api/login',
            data,
            success: function (res) {
                token = res.token;
            },
            error: function (err) {
                console.log(err);
            },
        });
    });

    $('#logout').on('click', function () {
        $.ajax({
            type: 'POST',
            url: '/api/logout',
            success: function (res) {
                console.log('logout success');
            },
            error: function (err) {
                console.log(err);
            },
        });
    });
    $('#users').on('click', function () {
        $.ajax({
            headers: {
                Authorization: `Bearer ${token}`, // 授权 token使用方式
            },
            type: 'GET',
            url: '/api/users11',
            success: function (res) {
                console.log(res);
            },
            error: function (err) {
                console.log(err);
            },
        });
    });


    $('#submit').click(function () {
        var formData = new FormData(document.getElementById('vform'));
        $.ajax({
            headers: {
                Authorization: `Bearer ${token}`, // 授权 token使用方式
            },
            type: 'POST',
            url: '/api/upload',
            data: formData,
            processData: false,
            contentType: false,
            error: function (err) {
                console.log(err);
            },
            success: function (data) {
                console.log(data);
            },
            xhr: function () {
                myXhr = $.ajaxSettings.xhr();
                if (myXhr.upload) { //检查upload属性是否存在
                    //绑定progress事件的回调函数
                    myXhr.upload.addEventListener('progress', progressHandlingFunction, false);
                }
                return myXhr; //xhr对象返回给jQuery使用
            },
        });
    });

    function progressHandlingFunction(event) {
        console.log(event.loaded, event.total);
        var loaded = Math.floor(100 * (event.loaded / event.total)); //已经上传的百分比
        $('#progress-bar').html(loaded + '%').css('width', loaded + '%');
    }

</script>
